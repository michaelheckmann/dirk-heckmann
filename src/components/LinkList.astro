---
import type { TypeLinkSkeleton } from "@types";
import type { Entry } from "contentful";
import Link from "./Link.astro";

export interface Props {
  title: string;
  links: (
    | Entry<TypeLinkSkeleton, "WITHOUT_UNRESOLVABLE_LINKS", string>
    | undefined
  )[];
}

const { title, links } = Astro.props;
---

<div>
  <h2
    class="text-gray-600 text-sm font-bold text-[15px] tracking-[0.2px] uppercase"
  >
    {title}
  </h2>
  <div class="flex flex-col gap-10 mt-6 items-start">
    {links.map((link) => link && <Link {...link} />)}
  </div>
</div>
